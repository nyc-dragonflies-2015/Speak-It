<%= form_for @user, url: create_session_path, class: 'form-horizontal' do |f| %>
  <div class="form-group" >
    <i class="glyphicon glyphicon-user form-icon"></i>
    <%= f.text_field :username, class: 'form-control', id: "login-field", placeholder: "username" %>
  </div>
  <div class= "form-group">
    <i class="glyphicon glyphicon-lock form-icon"></i>
    <%= f.password_field :password, class: 'form-control', id: "login-field", placeholder: "password" %>
  </div><br/>
  <div class="submit-button-holder">
    <%= f.submit "Login", class: 'btn btn-lg btn-primary' %>
  </div>
<% end %>
