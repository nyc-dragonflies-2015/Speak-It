<div id="main-container" class="container">
  <div id= "welcome-bar" class= "row">
    <div id= "login-col" class= "col-sm-3">
      <div>
        <%= render partial: "sessions/form" %>
      </div>
      <% if flash[:notice] %>
        <% flash[:notice].each do |msg| %>
          <p> <%= msg %></p>
        <% end %>
      <% end %>
    </div>

    <div id="speak-it-info" class="col-sm-9">
      <h2 id="proxima-nova"> Welcome To Speak It!</h2>
      <%= link_to 'Sign Up', new_user_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
  <div id="interact" class="row">
    <h2> Interact with users around the world </h2>
  </div>
  <div id="level-up" class="row">
    <h2> Level up and master your language </h2>
  </div>
</div>
