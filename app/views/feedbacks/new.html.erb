<div id="feedback-form-wrapper">
  <h1 class="form-title">Feedback</h1>

  <div class="container">
  <%= form_for @feedback, url: create_feedback_path, method: 'post' do |f| %>
  <div class="form-group">
    <div class="row non-select">
      <p class="feedback-instruction">On a scale of 1-3 stars, how was the learner's pronunciation?</p>
    </div>
    <div class= "row non-select">
      <%= f.select(:rating, options_for_select(@ratings), {}, {class: "form-control", onChange: "createStars(this);"}) %>
      <div class="stars-container">
        <span class="glyphicon glyphicon-star animated hidden"></span>
        <span class="glyphicon glyphicon-star animated hidden"></span>
        <span class="glyphicon glyphicon-star animated hidden"></span>
      </div>
    </div>
   </div>
  <div class="form-group">
    <div class="row non-select">
      <p class="feedback-instruction">On a scale of 1-3 stars, how was the learner's vocabulary?</p>
    </div>
    <div class= "row non-select">
      <%= f.select(:rating, options_for_select(@ratings), {}, {class: "form-control"}) %>
      <div class="stars-container">
        <span class="glyphicon glyphicon-star animated hidden"></span>
        <span class="glyphicon glyphicon-star animated hidden"></span>
        <span class="glyphicon glyphicon-star animated hidden"></span>
      </div>
    </div>
   </div>
  <div class="form-group">
    <div class="row non-select">
      <p class="feedback-instruction">On a scale of 1-3 stars, how descriptive was the learner?</p>
    </div>
    <div class= "row non-select">
      <%= f.select(:rating, options_for_select(@ratings), {}, {class: "form-control"}) %>
      <div class="stars-container">
        <span class="glyphicon glyphicon-star animated hidden"></span>
        <span class="glyphicon glyphicon-star animated hidden"></span>
        <span class="glyphicon glyphicon-star animated hidden"></span>
      </div>
    </div>
   </div>
   <div class="form-group">
     <div class="row non-select">
       <p class="feedback-instruction">Feel free to leave a comment for the learner. Remember to be kind, actionable, and specific in your feedback.</p>
     </div>
     <div class="row non-select">
       <%= f.text_area :comment,class: 'form-control', id: 'comment-field', placeholder: "Place your feedback here" %>
      </div>
    </div>
  </div>
    <%= f.hidden_field :chat_id, value: @chat.id %>
    <%= f.hidden_field :sender_id, value: current_user.id %>
    <%= f.hidden_field :recipient_id, value: @chat.student_id %>
    <%= f.submit "Submit Feedback", class: 'btn btn-primary form-button' %>
  <% end %>
  </div>
</div>
