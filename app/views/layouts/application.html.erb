<!DOCTYPE html>
<html>
<head>
  <title>SpeakIt</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>


<%= render partial: "welcome/navbar" %>

<% if flash[:notice]%>
  <% flash[:notice].each do |msg| %>
    <p class="notice"> <%= msg %></p>
  <% end %>
<% elsif flash[:alert] %>
  <% flash[:alert].each do |msg| %>
    <p class="alert"> <%= msg %></p>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
